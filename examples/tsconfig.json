{
  "extends": "./tsconfig.basic.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
    "composite": true,
    "module": "ESNext",
    "target": "ESNext",
    // Note: In order to transform *both* js and d.ts files, you need to add both of the below lines to plugins
    "plugins": [{ "name": "typescript-plugin-css-modules" }]
  },
  "references": [{ "path": "../tsconfig.build.json" }], // reference is not inherited: https://github.com/microsoft/TypeScript/issues/27098, remember also adding the reference project to nodemon watch config
  "include": ["src", "tests"],
  "ts-node": {
    "esm": true,
    "files": true,
    "transpileOnly": true
  }
}
